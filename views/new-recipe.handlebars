  <form method="post" enctype="multipart/form-data" id="recipe-form" class="new-recipe-form container border border-dark rounded card mt-3 mb-3">
    <h2 class="text-center mt-3">Create New Recipe</h2>
    <div>
      <label for="title">Title</label>
      <input type="text" class="form-control" rows="3" name="title" />
    </div>
        <div>
      <label for="description">Description</label>
      <textarea name="description" class="form-control" rows="10"></textarea>
    </div>
    <div>
      <label for="ingredients">Ingredients</label>
      <textarea name="ingredients" class="form-control" rows="10"></textarea>
    </div>
    <div>
      <label for="instructions">Instructions</label>
      <textarea name="instructions" class="form-control" rows="10"></textarea>
    </div>
    <div>
      <input type="file" name="recipe-img" onchange="readURL(this)"/>
      <img id="blah" src="#"/>
    </div>

    <button type="submit" class="btn btn-success btn-block mb-4 mt-4">Create Recipe</button>
  </form>

<script src="/javascript/add-recipe.js"></script>
<script src="/javascript/read-url.js"></script>
