<div class="comments">

  {{#each this}}
  <section class="comment">
    <div class="meta">
      <strong>{{user.username}}</strong> on <strong>{{format_date created_at}}</strong>
    </div>
    <div class="text">
      {{comment_text}}
    </div>
        <a href="/edit/{{comment.id}}" class="edit-link">Edit Comment</a>
  </section>
  {{/each}}


  You must <a href="/login" class="edit-link"> login </a> in to view comments

</div>