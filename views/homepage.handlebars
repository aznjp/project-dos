<div class="homepage-container mt-3 mb-3">
  <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
      {{#each recipes as |recipe|}}
      {{#if @index}}
        <li data-target="#carouselExampleIndicators" data-slide-to="{{@index}}"></li>
      {{else}}
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
      {{/if}}
      {{/each}}
    </ol>
    <div class="carousel-inner">
      {{#each recipes as |recipe|}}
      {{#if @index}}
      <div class="carousel-item">
      {{else}}
      <div class="carousel-item active">
      {{/if}}
      <a href="/recipe/{{recipe.id}}">
        <img class="d-block w-100 carousel-image-size" src="{{recipe.recipe_image}}" alt="Image">
        <div class="carousel-caption d-md-block">
          <h5>{{recipe.title}}</h5>
          <p>By: {{recipe.user.username}}</p>
        </div>
      </div>
      </a>
      {{/each}}
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>

  <div class="px-3">
    <h2 class="mt-5">Recipes:</h2>
    <div class="container px-0 mb-5">
      <div class="row">
        {{#each recipes as |recipe|}}
        <div class="col-12 col-md-4 mb-3 row no-gutters">
          <div class="col-4">
            <img class="d-block w-100" src="{{recipe.recipe_image}}" height="100"alt="Image">
          </div>
          <div class="col-8 pl-1">
            <a href="/recipe/{{recipe.id}}">{{recipe.title}}</a><br />
            By: <span class="username">{{recipe.user.username}}</span>
            <div class="recipe-block description-block overflow-hidden">{{recipe.description}}</div>
          </div>
          
        </div>
        {{/each}}
      </div>
    </div>
  </div>
</div>